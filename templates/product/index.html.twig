{% extends 'base.html.twig' %}

{% block title %}Nos Produits - La Boutique Informatique{% endblock %}
{% block background %} style="background-image: url('https://www.ldlc.com/v4/img/public/bg-configurateur.jpg');"{% endblock %}
{% block content %}
    <div class="row bg-image ">
        <div class="col-md-3">
            <h3>Filtrer</h3>
            {{ form(form) }}
        </div>
        
        <div class="col-md-9 bg-white rounde">
            <h3>Nos produits</h3>

            <div class="row product-container">
                {% for product in products %}
                    <div class="col-md-4">
                        {% include 'product/single_product.html.twig' %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    
{% endblock %}